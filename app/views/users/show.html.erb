<h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <ul class="list-group">
      <li class="list-group-item"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>　<%= @user.email %></li>
      <li class="list-group-item"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>　<%= @user.area %></li>
    </ul>
  </div>
  <div class="col-md-6 col-md-offset-3 show-link">
    <%= link_to "編集", edit_user_path(current_user), class: "btn btn-block btn-primary" %>
    <%= link_to "ログアウト", logout_path, method: "delete", class: "btn btn-block btn-danger" %>
  </div>
</div>