<h1>プロフィール編集</h1>
  
<div class="form-horizontal">
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    
    <div class="form-group">
      <%= f.label :name, "名前", class: "col-sm-3 control-label" %>
      <div class="col-sm-7">
        <%= f.text_field :name, class: "form-control", placeholder: "お名前をご入力ください" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :email, "Eメールアドレス", class: "col-sm-3 control-label" %>
      <div class="col-sm-7">
        <%= f.text_field :email, class: "form-control", placeholder: "Eメールアドレスをご入力ください" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :area, "住まい", class: "col-sm-3 control-label" %>
      <div class="col-sm-7">
        <%= f.text_field :area, class: "form-control", placeholder: "住まいをご入力ください" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :password, "パスワード", class: "col-sm-3 control-label" %>
      <div class="col-sm-7">
        <%= f.password_field :password, class: "form-control", placeholder: "パスワードをご入力ください" %>
    </div>
    </div>
    
    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード再入力", class: "col-sm-3 control-label" %>
      <div class="col-sm-7">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード再入力" %>
      </div>
    </div>
      
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-7">
      <%= f.submit "編集する", class: "btn btn-large btn-primary" %>
      </div>
    </div>
  <% end %>
</div>